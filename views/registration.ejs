        <% if (errors.studentID) { %>
            <div class="alert alert-danger" role="alert"><%- errors.studentID %></div>
        <% } %>
        <div class="form-group">
            <label for="name">User name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter user name" name="username" required>
        </div>
        <% if (errors.username) { %>
            <div class="alert alert-danger" role="alert"><%- errors.username %></div>
        <% } %>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter Password" name="password" required>
        </div>
        <% if (errors.password) { %>
            <div class="alert alert-danger" role="alert"><%- errors.password %></div>
        <% } %>
